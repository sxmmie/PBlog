@model IndexViewModel

<div class="pages">
    @if (Model.PageNumber > 1)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="Category" asp-route-pageNumber="@(Model.PageNumber - 1)"><</a>
    }

    @foreach (var p in Model.Pages)
    {
        if (p == -1)
        {
            <span class="three-dots">...</span>
        }
        else
        {
            string activeClass = p == Model.PageNumber ? "active" : "";
            <a class="activeClass" asp-controller="Home" asp-action="Index" asp-route-category="Category" asp-route-pageNumber="@p">@p</a>
        }
    }

    @if (Model.NextPage)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="Category" asp-route-pageNumber="@(Model.PageNumber + 1)">></a>
    }
</div>